<div class="container-fluid">
  <div>
    <h2>Tag Detail</h2>
    <% if @tag.name != "" %>
        <p>Tag Name: <%= @tag.name %></p>
    <% else %>
        <p>Tag Name: Invalid entry.</p>
    <% end %>
  </div>
  <br><br>
  <div>
    <h4>Update tag Details</h4>
      <%= render('/layouts/tag_form') %>
  </div>

  <div id = "error_box">
    <%= render('/layouts/errors', :object => @tag) %>
  </div>

</div>
