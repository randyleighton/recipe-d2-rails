<div class="container-fluid">
  <div class="row">
    <h2>Recipe Detail</h2>
    <% if @recipe.name != "" %>
        <p>Recipe Name: <%= @recipe.name %></p>
    <% else %>
        <p>Recipe Name: Invalid entry.</p>
    <% end %>

    <% if @recipe.description != "" %>
      <p>Instructions: <%= @recipe.description %></p>
    <% else %>
      <p>Instructions: Incorrect Entry.</p>
    <% end %>
  </div>

  <div class="row">
    <h4>Tag ingredients to this recipe: </h4>
    <%= form_for(@tag) do |f| %>
      <div class="form-group">
        <%= f.hidden_field :recipe_id, :value => @recipe.id %>
        <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name %>
        <%= f.submit(:class => "recipe-button btn btn-primary")%>
      </div>
    <% end %>

  <div class = "row">
    <h3>Update a recipe</h3>
    <%= render 'form' %>
  </div>

</div>
