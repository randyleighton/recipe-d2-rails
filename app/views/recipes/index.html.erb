<% content_for(:title, "Home | Recipes" ) %>

<div class = "container-fluid">

  <div class = "all_list">
    <h3>View a Recipe:</h3>
      <% @recipes.each do |recipe| %>
        <div class = "each-recipe"><%= link_to "#{recipe.name}", recipe_path(recipe) %></div>
      <% end %>
  </div>

  <div>
    <h3>Input a new recipe:</h3>
    <%= render 'form' %>
  </div>

  <div>
    <%= render("/layouts/ingredient_list") %>
  </div>


</div>
