
<div class = "container-fluid">
  <h1>Recipes</h1>

  <div class = "row all_list">
    <h3>All recipes</h3>
    <ul>
      <% @recipes.each do |recipe| %>
        <li><p><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></p></li>
      <% end %>
    </ul>
  </div>

    <div class = "row">
    <h3>Input a new recipe</h3>
    <form action="/recipes" method="post">
      <%= render("/layouts/form") %>
      <button class="btn btn-success">Submit</button>
    </form>
  </div>

  <div id = "error_box" class = "row">
    <%= render('/layouts/errors', :object => @recipe) %>
  </div>
</div>
